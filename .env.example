UPSTOX_ACCESS_TOKEN=your_upstox_access_token_here
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_CHAT_ID=@your_channel_or_numeric_chat_id

OPTION_SYMBOL_NIFTY=NSE_INDEX|Nifty 50
OPTION_EXPIRY_NIFTY=2025-10-07

OPTION_SYMBOL_TCS=NSE_EQ|INE467B01029
OPTION_EXPIRY_TCS=2025-10-28

# --- WebSocket authorize endpoint (जर Upstox ने वेगळं दिलं असेल तर बदल) ---
MARKET_FEED_AUTHORIZE_URL=https://api.upstox.com/v3/market-data-feed/authorize

# --- Optional tuning (defaults दिले आहेत) ---
RECONNECT_BASE_DELAY=1       # पहिल्या disconnect नंतर किती सेकंदांनी पुन्हा connect
RECONNECT_MAX_DELAY=60       # backoff ceiling (max wait)
DEFAULT_SUBSCRIBE_BATCH=100  # एका subscribe message मध्ये जास्तीत जास्त instruments
WS_READ_TIMEOUT=60           # सेकंदात timeout (server कडून मेसेज न आल्यास reconnect)
HEARTBEAT_INTERVAL=25        # server ping interval (जर आवश्यक असेल तर)

# --- Logging control (INFO/DEBUG/ERROR) ---
LOG_LEVEL=INFO
